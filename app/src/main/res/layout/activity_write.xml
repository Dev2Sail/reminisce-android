<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- address & markerEmoji는 텍스트 필드(edittext)로 만들어야지!-->
            <include
                android:id="@+id/write_appbar"
                layout="@layout/layout_appbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/write_visited_at_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_2xlarge"
                android:layout_marginBottom="@dimen/margin_small"
                android:src="@drawable/outline_calendar_month_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/write_appbar"
                app:tint="@color/md_theme_light_primary" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/write_visited_at"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_large"
                android:fontFamily="@font/pretendard_regular"
                android:text="2022-08-02"
                android:textColor="@color/md_theme_light_primary"
                android:textSize="@dimen/body_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/write_visited_at_icon"
                app:layout_constraintTop_toBottomOf="@id/write_appbar" />

            <ImageView
                android:id="@+id/write_address_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_2xlarge"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:src="@drawable/round_search_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/write_visited_at"
                app:tint="@color/md_theme_light_primary" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/write_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_large"
                android:fontFamily="@font/pretendard_regular"
                android:text="인천광역시 미추홀구 숙골로 113"
                android:textColor="@color/md_theme_light_primary"
                android:textSize="@dimen/body_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/write_address_icon"
                app:layout_constraintTop_toBottomOf="@id/write_visited_at" />

            <ImageView
                android:id="@+id/write_marker_emoji_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_2xlarge"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:src="@drawable/outline_add_reaction_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/write_address"
                app:tint="@color/md_theme_light_primary" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/write_marker_emoji"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_large"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/md_theme_light_primary"
                android:textSize="@dimen/body_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/write_marker_emoji_icon"
                app:layout_constraintTop_toBottomOf="@id/write_address" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/write_divider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_regular"
                android:layout_marginBottom="@dimen/margin_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/write_marker_emoji" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/write_text_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_regular"
                android:layout_marginTop="@dimen/margin_small"
                app:counterEnabled="true"
                app:counterMaxLength="1000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/write_divider"
                app:placeholderText="추억을 기록해보세요!">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_theme_light_surface"
                    android:inputType="textMultiLine"
                    android:paddingTop="-12dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>