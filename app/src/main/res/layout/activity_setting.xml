<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activity.setting.SettingActivity">

    <include
        android:id="@+id/setting_header"
        layout="@layout/card_common_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/setting_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4xlarge"
        android:layout_marginTop="@dimen/margin_2xlarge"
        android:fontFamily="@font/pretendard_medium"
        android:text="@string/setting_account"
        android:textSize="@dimen/title_medium"
        app:layout_constraintEnd_toStartOf="@id/setting_account_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_header" />

    <ImageView
        android:id="@+id/setting_account_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2xlarge"
        android:layout_marginEnd="@dimen/margin_4xlarge"
        android:src="@drawable/round_arrow_forward_ios_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_header"
        app:tint="@color/md_theme_light_primary" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/setting_friend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4xlarge"
        android:layout_marginTop="@dimen/margin_2xlarge"
        android:fontFamily="@font/pretendard_medium"
        android:text="@string/setting_friend"
        android:textSize="@dimen/title_medium"
        app:layout_constraintEnd_toStartOf="@id/setting_friend_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_account" />

    <ImageView
        android:id="@+id/setting_friend_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2xlarge"
        android:layout_marginEnd="@dimen/margin_4xlarge"
        android:src="@drawable/round_arrow_forward_ios_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_account"
        app:tint="@color/md_theme_light_primary" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/setting_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4xlarge"
        android:layout_marginTop="@dimen/margin_2xlarge"
        android:fontFamily="@font/pretendard_medium"
        android:text="@string/setting_logout"
        android:textSize="@dimen/title_medium"
        app:layout_constraintEnd_toStartOf="@id/setting_logout_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_friend" />

    <ImageView
        android:id="@+id/setting_logout_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2xlarge"
        android:layout_marginEnd="@dimen/margin_4xlarge"
        android:src="@drawable/round_exit_to_app_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_friend"
        app:tint="@color/md_theme_light_primary" />
</androidx.constraintlayout.widget.ConstraintLayout>