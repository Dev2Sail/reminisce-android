<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/write_detail_location_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_regular"
        android:fontFamily="@font/pretendard_semibold"
        android:text="@string/write_location_title"
        android:textColor="@color/md_theme_light_secondary"
        android:textSize="@dimen/title_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/write_detail_location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_2xlarge"
        android:src="@drawable/outline_add_location_alt_16"
        app:layout_constraintBottom_toBottomOf="@id/write_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/write_location"
        app:tint="@color/md_theme_light_primary" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/write_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_regular"
        android:layout_marginEnd="@dimen/margin_large"
        android:fontFamily="@font/pretendard_regular"
        android:text="@string/write_location"
        android:textColor="@color/md_theme_light_onSurfaceVariant"
        android:textSize="@dimen/body_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/write_detail_location_icon"
        app:layout_constraintTop_toBottomOf="@id/write_detail_location_title" />

    <ImageView
        android:id="@+id/write_detail_marker_emoji_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_2xlarge"
        android:src="@drawable/outline_add_reaction_16"
        app:layout_constraintBottom_toBottomOf="@id/write_detail_marker_emoji"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/write_detail_marker_emoji"
        app:tint="@color/md_theme_light_primary" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/write_detail_marker_emoji"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_regular"
        android:layout_marginEnd="@dimen/margin_large"
        android:fontFamily="@font/pretendard_regular"
        android:text="@string/write_emoji"
        android:textColor="@color/md_theme_light_onSurfaceVariant"
        android:textSize="@dimen/body_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/write_detail_marker_emoji_icon"
        app:layout_constraintTop_toBottomOf="@id/write_location" />
</androidx.constraintlayout.widget.ConstraintLayout>